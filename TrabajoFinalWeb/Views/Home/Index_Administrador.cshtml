    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<!DOCTYPE HTML>
<html>

<body>

    <!-- Banner -->
    <section class="banner full">
        <article>
            <img src="~/images/slide01.jpg" alt="" />
            <div class="inner">
                <header>
                    <p>REFACCIONARIA</p>
                    <h2>BateriasREC</h2>
                </header>
            </div>
        </article>
        <article>
            <img src="~/images/slide02.jpg" alt="" />
            <div class="inner">
                <header>
                    <p>EL MEJOR SABOR</p>
                    <h2>Como en casa</h2>
                </header>
            </div>
        </article>
        <article>
            <img src="~/images/slide03.jpg" alt="" />
            <div class="inner">
                <header>
                    <p>LOS MEJORES PRECIOS</p>
                    <h2>Para tu estómago</h2>
                </header>
            </div>
        </article>
        <article>
            <img src="~/images/slide04.jpg" alt="" />
            <div class="inner">
                <header>
                    <p>EN EL MEJOR LUGAR</p>
                    <h2>Donde encontraras lo mejor de automovil</h2>
                </header>
            </div>
        </article>
        <article>
            <img src="~/images/slide05.jpg" alt="" />
            <div class="inner">
                <header>
                    <p>DONDE TODOS SALEN</p>
                    <h2>Satisfechos</h2>
                </header>
            </div>
        </article>
    </section>

    <!-- One -->
    <section id="one" class="wrapper style2">
        <div class="inner">
            <div class="grid-style">

                <div>
                    <div class="box">
                        <div class="image fit">
                            <img src="~/images/1.jpg" alt="" width="10" height="300" />
                        </div>
                        <div class="content">
                            <header class="align-center">
                                <p>nuestros locales son</p>
                                <h2>los más economicos</h2>
                            </header>
                            <p>Dentro de nuestro establecimiento tienes la comodidad de venir a nuestra sucursal o bien realizar tu pedido via online</p>
                            <footer class="align-center">
                                <a href="#" class="button alt">Learn More</a>
                            </footer>
                        </div>
                    </div>
                </div>

                <div>
                    <div class="box">
                        <div class="image fit">
                            <img src="~/images/2.jpg" alt="" width="50" height="300" />
                        </div>
                        <div class="content">
                            <header class="align-center">
                                <p>eficiencia en nustras entregas</p>
                                <h2>a tu comodidad</h2>
                            </header>
                            <p> los productos que vendemos son de la mejor calidad y a un buen precio, contamos con un variado productos para poder satisfacer las necesidades de todos nuestros clientes</p>
                            <footer class="align-center">
                                <a href="#" class="button alt">Learn More</a>
                            </footer>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Two -->
    <section id="two" class="wrapper style3">
        <div class="inner">
            <header class="align-center">
                <p>Siendo la mejor de la zona</p>
                <h2>ven a conocernos</h2>
            </header>
        </div>
    </section>

    <!-- Three -->
    <section id="three" class="wrapper style2">
        <div class="inner">
            <header class="align-center">
                <p class="special">cada pedido es especial para nosotros</p>
                <h2>por eso los clientes vuelven</h2>
            </header>

        </div>
    </section>


    <!-- Footer -->
    <footer id="footer">
        <div class="container">
            <ul class="icons">
                <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                <li><a href="#" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
            </ul>
        </div>
        <div class="copyright">
            &copy; REFACCIONARIA BateriasREC. All rights reserved.
        </div>
    </footer>
</body>
</html>